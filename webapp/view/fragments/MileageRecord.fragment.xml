<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:form="sap.ui.layout.form">
	<Dialog id="dialogMileage" title="{i18n>formTable}">
		<content>
			<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false"
				emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"
				editable="true">
				<form:content>
					<Label id="lblMileageDt" text="{i18n>lblDate}" labelFor="inputMileageDt"/>
					<DatePicker id="inputMileageDt" displayFormat="dd.MM.yyyy" valueFormat="dd.MM.yyyy" required="true" ariaLabelledBy="lblMileageDt"
						width="100%"/>
					<Label text="{i18n>lblTown}" labelFor="inputTown"/>
					<Input id="inputTown" type="Text" required="true"/>
					<Label text="{i18n>lblTotalKMx}" labelFor="inputTotalKMx"/>
					<Input id="inputTotalKMx" type="Number" required="true" liveChange="_onUpdateKM"
						value="{ type : 'sap.ui.model.type.Integer', constraints : { minimun: 1, maximum: 99999 } }"/>
					<Label text="{i18n>lblRetKMy}" labelFor="inputRetKMy"/>
					<Input id="inputRetKMy" type="Number" required="true" valueStateText="Invalid entry" liveChange="_onUpdateKM"
						value="{ type : 'sap.ui.model.type.Integer', constraints : { minimun: 1, maximum: 99999 } }"/>
					<Label text=" {i18n>lblTotKMxy}" labelFor="inputTotKMxy"/>
					<Input id="inputTotKMxy" text="" maxLines="1" editable="false"/>
				</form:content>
			</form:SimpleForm>
		</content>
		<buttons>
			<Button text="Accept" type="Accept" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onButtonPress1"/>
			<Button text="Cancel" type="Reject" iconFirst="true" width="auto" enabled="true" visible="true" iconDensityAware="false"
				press="_onButtonPress"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>