<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:f="sap.f" xmlns:layout="sap.ui.layout"
	xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="qldh.ZHR_F_MV_CLAIM.controller.MVClaimForm" displayBlock="true" floatingFooter="true">
	<semantic:FullscreenPage enableScrolling="{device>/system/phone}">
		<semantic:content>
			<ObjectPageHeader id="objPgHeader" objectTitle="{i18n>title}" objectImageShape="Circle" objectImageURI="sap-icon://insurance-car"
				isObjectIconAlwaysVisible="true" objectSubtitle="{i18n>title_alt}" showTitleSelector="true"/>
			<!--	<m:ObjectHeader intro="{i18n>title}" title="{i18n>title}" id="objectHeaderTitle" fullScreenOptimized="true" responsive="true"
				titleActive="true" icon="sap-icon://insurance-car"/>-->
			<m:IconTabBar id="iconTabBar">
				<m:items>
					<m:IconTabFilter text="Details" icon="sap-icon://form" id="claimTab">
						<m:content>
							<mvc:XMLView viewName="qldh.ZHR_F_MV_CLAIM.view.ClaimForm" type="XML"/>
						</m:content>
					</m:IconTabFilter>
					<m:IconTabFilter text="Attachments" icon="sap-icon://attachment" id="attachTab">
						<core:ComponentContainer id="attachments" class="sapUiLargeMarginTop" width="100%" name="qldh.attachments" component="qldh.attachments"
							propagateModel="true" lifecycle="Container"/>
					</m:IconTabFilter>
					<m:IconTabFilter text="Comments" icon="sap-icon://comment" id="commentsTab"/>
					<m:IconTabFilter text="Process Flow" icon="sap-icon://employee-approvals" id="pFlowTab">
						<core:ComponentContainer width="100%" name="qldh.processflow.ZHR_PROCESSFLOW_EM" component="qldh.processflow.ZHR_PROCESSFLOW_EM"
							propagateModel="true" lifecycle="Container"/></m:IconTabFilter>
				</m:items>
			</m:IconTabBar>
		</semantic:content>
		<semantic:customFooterContent>
			<m:Button id="btnSubmit" text="{i18n>Submit}" press="onSave" type="Emphasized" visible="true"/>
			<m:Button id="btnCancel" text="{i18n>Cancel}" press="navBack" visible="true"/>
		</semantic:customFooterContent>
	</semantic:FullscreenPage>
</mvc:View>