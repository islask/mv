<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.uxap" xmlns:m="sap.m" xmlns:f="sap.f" xmlns:layout="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:semantic="sap.m.semantic" xmlns:html="http://www.w3.org/1999/xhtml" controllerName="qldh.MV_Claim.controller.MVClaimForm" displayBlock="true">
	<semantic:FullscreenPage>
		<semantic:content>
			<ObjectPageHeader id="objPgHeader" objectTitle="{i18n>title}" objectImageShape="Circle" objectImageURI="sap-icon://insurance-car" isObjectIconAlwaysVisible="true" objectSubtitle="{i18n>title_alt}" showTitleSelector="true"/>
			<!--	<m:ObjectHeader intro="{i18n>title}" title="{i18n>title}" id="objectHeaderTitle" fullScreenOptimized="true" responsive="true"
				titleActive="true" icon="sap-icon://insurance-car"/>-->
			<m:IconTabBar id="iconTabBar">
				<m:items>
					<m:IconTabFilter text="Details" icon="sap-icon://form" id="claimTab">
						<m:content>
							<mvc:XMLView viewName="qldh.MV_Claim.view.ClaimForm" type="XML"/>
							<!--<core:Fragment fragmentName="qldh.MV_Claim.view.fragments.ClaimForm" type="XML"/>-->
						</m:content>
					</m:IconTabFilter>
					<m:IconTabFilter text="Attachments" icon="sap-icon://attachment" id="attachTab">
						<core:ComponentContainer id="attachments" class="sapUiLargeMarginTop" width="100%" name="qldh.attachments" component="qldh.attachments" propagateModel="true" lifecycle="Application"/>
					</m:IconTabFilter>
					<m:IconTabFilter text="Comments" icon="sap-icon://comment" id="commentsTab"/>
					<m:IconTabFilter text="Process Flow" icon="sap-icon://employee-approvals" id="pFlowTab">
						<core:ComponentContainer width="100%" name="qldh.processflow.ZHR_PROCESSFLOW_EM" component="qldh.processflow.ZHR_PROCESSFLOW_EM" propagateModel="true" lifecycle="Application"/></m:IconTabFilter>
				</m:items>
			</m:IconTabBar>
		</semantic:content>
	</semantic:FullscreenPage>
</mvc:View>