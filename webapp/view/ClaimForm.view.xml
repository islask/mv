<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:form="sap.ui.layout.form"
	controllerName="qldh.MV_Claim.controller.ClaimForm" xmlns:html="http://www.w3.org/1999/xhtml">
	<form:SimpleForm layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="3" labelSpanM="4" labelSpanS="12" adjustLabelSpan="false"
		emptySpanXL="0" emptySpanL="4" emptySpanM="0" emptySpanS="0" columnsXL="2" columnsL="1" columnsM="1" singleContainerFullSize="false"
		editable="true">
		<form:content>
			<core:Title text="{i18n>formBasic}"/>
			<Label text="{i18n>lblWorkLoc}" labelFor="inputWorkLoc"/>
			<Input id="inputWorkLoc" type="Text" required="true"/>
			<Label text="{i18n>lblReason}" labelFor="inputReason"/>
			<Input id="inputReason" type="Text" required="true"/>
			<Label text="{i18n>lblReqBy}" labelFor="segBtnReqBy"/>
			<SegmentedButton id="segBtnReqBy">
				<items>
					<SegmentedButtonItem text="{i18n>btnReqByS}"/>
					<SegmentedButtonItem text="{i18n>btnReqByE}"/>
				</items>
			</SegmentedButton>
			<Label text="{i18n>lblVehicleType}" labelFor="rbGrpVehicleType"/>
			<RadioButtonGroup id="rbGrpVehicleType" columns="8" selectedIndex="0" select="_onRadioButtonGroupSelect">
				<buttons>
					<RadioButton text="{i18n>rbVehicleCar}" editable="true"/>
					<RadioButton text="{i18n>rbVehicleMCycle}" editable="true"/>
				</buttons>
			</RadioButtonGroup>
			<Label text="{i18n>lblRego}" labelFor="inputRego"/>
			<Input id="inputRego" type="Text" width="50%" required="true" maxLength="20"/>
			<core:Title text="{i18n>formTable}"/>
			<Table id="tblMileage" mode="SingleSelectMaster" growing="true" growingScrollToLoad="true">
				<headerToolbar>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>btnTblAdd}" icon="sap-icon://add" press="_onBtnAdd"/>
						<Button text="{i18n>btnTblRemove}" type="Transparent" icon="sap-icon://delete" press="_onOverflowToolbarButtonPress1"/>
					</Toolbar>
				</headerToolbar>
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Text/>
							<Text text=""/>
							<Text text=""/>
							<Text text=""/>
							<Text text=""/></cells>
					</ColumnListItem>
				</items>
				<columns>
					<Column id="colDate">
						<Text text="{i18n>lblDate}"/>
					</Column>
					<Column id="colTown">
						<Text text="{i18n>lblTown}"/>
					</Column>
					<Column id="colTotKMx">
						<Text text="{i18n>lblTotalKMx}"/>
					</Column>
					<Column id="colRetKMy">
						<Text text="{i18n>lblRetKMy}"/>
					</Column>
					<Column id="colTotKMxy">
						<Text text="{i18n>lblTotKMxy}"/>
					</Column>
				</columns>
			</Table>
			<core:Title text="{i18n>formCost}"/>
			<Label text="{i18n>formTotKM}" labelFor="inputFormToKM"/>
			<Input id="inputFormTotKM" value="205" type="Number" enabled="false" visible="true" width="50%"/>
			<Label text="{i18n>lblAt}" labelFor="inputRate"/>
			<Input id="inputRate" value="80" type="Number" enabled="false" description="{i18n>txtRate}"/>
			<Label text="{i18n>lblTotClaim}" labelFor="inputTotClaim"/>
			<Input id="inputTotClaim" value="164.00" type="Number" description="AUD" valueStateText="Invalid entry" maxLength="0"/>
			<Label text="{i18n>lblCostCtr}" labelFor="inputCostCentre"/>
			<Input id="inputCostCentre" value="2690288" type="Text" showValueHelp="true" valueStateText="Invalid entry" maxLength="10"/>
		</form:content>
	</form:SimpleForm>
</mvc:View>